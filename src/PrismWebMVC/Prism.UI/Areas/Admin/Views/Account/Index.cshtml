
@{
    ViewData["Title"] = "Account List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.datatables.net/v/bs4/dt-2.0.7/datatables.min.css" rel="stylesheet">
<table id="tbl-account" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Tài khoản</th>
            <th>Email</th>
            <th>Active</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>




@section Scripts {
    <script src="https://cdn.datatables.net/v/bs4/dt-2.0.7/datatables.min.js"></script>
    <script src="~/assets/js/registerdatatable.js"></script>
    <script>
        const elementName = "#tbl-account";
        const columns = [
            { data: 'username', name: 'username', width: 150 },
            { data: 'email', name: 'email', autoWidth: true },
            { data: 'isActive', name: 'isActive', width: 80 },
            { data: 'id', name: 'id', width: 80,
                render: function (key) {
                    return `<a href="/admin/account/SaveData?id=${key}"><i class="zmdi zmdi-assignment-o"></i></a> &nbsp
                                        <a href="#"><i class="zmdi zmdi-block"></i></a>`;
                }
            },
        ];
        const urlApi = "/admin/account/getallaccountpagination";

            registerDatatable(elementName, columns, urlApi);
    </script>
}

